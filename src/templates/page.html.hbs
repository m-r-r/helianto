{{> head.html}}
<div class="page__body">
  <div class="content">
    {{#if page}}
      <h1>{{page.title}}</h1>
      {{{page.content}}}
    {{else}}
      {{#each pages}}
      <section class="post">
        <h3 class="post__title">
          <a href="{{url}}">{{title}}</a>
        </h3>
        <time class="post__date" datetime="{{created}}">{{date created format=%Y-%m-%d }}</time>
      </section>
      {{/each}}
    {{/if}}
  </div>
</div>
{{> foot.html}}
