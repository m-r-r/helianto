{{> head.html}}
<div class="page__middle">
  <section class="content">
    {{#if page.content}}
        <h1>{{page.title}}</h1>
        {{{page.content}}}
    {{else}}
      <ul class="posts">
          {{#each page.documents}}
          <li>
            {{#if created}}
               <time class="post__date" datetime="{{created}}">{{date created format=%Y-%m-%d }}</time>
               <span aria-hidden="true">â†’</span>
            {{/if}}
            <a href="{{url}}">{{title}}</a>
          </li>
          {{/each}}
      </ul>
    {{/if}}
  </section>
</div>
{{> foot.html}}
